@model List<BillRecheckRequest>



@{
    ViewData["Title"] = "Recheck Requests";
}

<link href="~/css/AdminRecheckBill.css" rel="stylesheet" />

<div class="container-fluid py-4">
    <div class="dashboard-card">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <!-- Left Side: Text -->
            <div>
                <h1 class="page-title">Recheck Requests</h1>
                <p class="page-subtitle">Review and resolve billing discrepancies reported by users.</p>
            </div>

            <!-- Right Side: Button -->
            <a href="/Admin/Bills" class="btn-home">
                <i class="fas fa-arrow-left me-2"></i> Back
            </a>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-3">
                    <i class="fas fa-check-circle" style="font-size: 3rem; color: var(--text-muted); opacity: 0.5;"></i>
                </div>
                <h3 class="h5 text-muted">No pending recheck requests</h3>
            </div>
        }
        else
        {
            <div class="custom-table-container">
                <table class="table-dark-custom">
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th>User Name</th>
                            <th>Bill Date</th>
                            <th>Amount</th>
                            <th style="max-width: 250px;">Message</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var req in Model)
                        {
                            <tr data-request-id="@req.Id">
                                <td class="text-muted">#@req.Id</td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <!-- Placeholder Avatar -->
                                        <div style="width:30px; height:30px; background:#fd5d38; border-radius:50%; display:flex; align-items:center; justify-content:center; color:white; font-size:12px; font-weight:bold;">
                                            @req.User.Name.Substring(0,1).ToUpper()
                                        </div>
                                        <span>@req.User.Name</span>
                                    </div>
                                </td>
                                <td>@req.Bill.GeneratedOn.ToString("MMM dd, yyyy")</td>
                                <td class="amount-cell text-success fw-bold">Rs. @req.Bill.TotalAmount</td>
                                <td class="text-muted text-truncate" style="max-width: 250px;" title="@req.RequestMessage">
                                    "@req.RequestMessage"
                                </td>
                                <td class="status-cell">
                                    @if (req.Status == "Pending")
                                    {
                                        <span class="badge-custom badge-pending">Pending</span>
                                    }
                                    else if (req.Status == "Approved")
                                    {
                                        <span class="badge-custom badge-approved">Approved</span>
                                    }
                                    else if (req.Status == "Rejected")
                                    {
                                        <span class="badge-custom badge-rejected">Rejected</span>
                                    }
                                    else
                                    {
                                        <!-- Fallback for any other status -->
                                        <span class="badge-custom badge-processed">@req.Status</span>
                                    }
                                </td>
                                <td class="action-cell text-end">
                                    @if (req.Status == "Pending")
                                    {
                                        <button type="button" class="btn-action"
                                                onclick="openSweetAlertRecheck(@req.Id, '@req.User.Name', @req.Bill.TotalAmount, '@req.RequestMessage', this)">
                                            <i class="fas fa-edit"></i> Review
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Processed</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- SweetAlert2 CDN (Ensure this or local file is loaded) -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/AdminRecheckBills.js"></script>
