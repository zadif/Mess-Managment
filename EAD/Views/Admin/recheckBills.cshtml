@model List<BillRecheckRequest>




<link href="~/css/statusOfBills.css" rel="stylesheet" />

<div class="page-container fade-in">
    <div class="page-header text-center mb-5">
        <h1 class="display-5 fw-bold">Recheck Requests</h1>
        <p class="lead text-muted">Review and resolve user recheck requests</p>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <h3>No pending recheck requests</h3>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>#ID</th>
                        <th>User</th>
                        <th>Bill Month</th>
                        <th>Amount</th>
                        <th>User Message</th>
                        <th>Requested On</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var req in Model)
                    {
                        <tr data-request-id="@req.Id">
                            <td>#@req.Id</td>
                            <td><strong>@req.User.Name</strong></td>
                            <td>@req.Bill.GeneratedOn</td>
                            <td class="amount-cell text-success fw-bold">Rs. @req.Bill.TotalAmount</td>
                            <td><em>"@req.RequestMessage"</em></td>
                            <td>@req.RequestedOn</td>
                            <td class="status-cell">
                                @if (req.Status == "Pending")
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@req.Status</span>
                                }
                            </td>
                            <td class="action-cell">
                                @if (req.Status == "Pending")
                                {
                                    <button type="button" class="btn btn-primary btn-sm"
                                            onclick="openRecheckModal(@req.Id, '@req.User.Name', @req.Bill.TotalAmount, '@req.RequestMessage', this)">
                                        Review Request
                                    </button>
                                }
                                else
                                {
                                    <span class="text-success">Processed</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- RECHECK MODAL -->
<div id="recheckModal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.7); z-index:9999; justify-content:center; align-items:center;">
    <div style="background:white; padding:30px; border-radius:15px; width:90%; max-width:550px; box-shadow:0 10px 30px rgba(0,0,0,0.3);">
        <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
            <h4 style="margin:0;">Review Recheck Request</h4>
            <span onclick="closeRecheckModal()" style="font-size:30px; cursor:pointer; color:#999;">×</span>
        </div>

        <div class="mb-3"><strong>User:</strong> <span id="modalUserName"></span></div>
        <div class="mb-3"><strong>Current Amount:</strong> <span id="modalCurrentAmount" class="text-success fw-bold"></span></div>
        <div class="mb-4"><strong>User Message:</strong><br><em id="modalUserMessage" class="text-muted"></em></div>

        <div class="mb-3">
            <label><strong>New Amount (optional):</strong></label>
            <input type="number" id="newAmount" class="form-control" placeholder="Leave blank to keep original" />
        </div>

        <div class="text-end">
            <button onclick="resolveRequest('approve', this)" class="btn btn-success me-2">Approve & Update</button>
            <button onclick="resolveRequest('reject', this)" class="btn btn-danger me-2">Reject</button>
        </div>
    </div>
</div>

            <script src="~/js/AdminRecheckBills.js"></script>