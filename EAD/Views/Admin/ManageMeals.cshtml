@model List<MealItem>

<!-- Link the Styles -->
<link rel="stylesheet" href="~/css/AdminHome.css">


<br />
<a href="/" class="btn-add">
    </i>Home
</a>
<div class="page-container fade-in">
    <!-- Header -->
    <header class="page-header">
        <div class="page-title">
            <h2>Manage Meals</h2>
            <p>Update menu items and pricing</p>
        </div>
        <a href="/Admin/AddMeal" class="btn-add">
            <i class="fas fa-utensils"></i> Add Meal
        </a>
    </header>

    <!-- Content Card -->
    <div class="data-card">
        @if (Model.Count == 0)
        {
            <div class="empty-state">
                <i class="fas fa-hamburger"></i>
                <h3>No meals exist</h3>
                <p>Start by adding items to the menu.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th>Dish Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var meal in Model)
                        {
                            <tr>
                                <td>#@meal.Id</td>
                                <td style="font-weight: 600; color: #fff;">@meal.Name</td>
                                <td>
                                    <!-- Optional: Add badge styling for category -->
                                    <span style="background: rgba(255,255,255,0.1); padding: 4px 10px; border-radius: 4px; font-size: 0.8rem;">
                                        @meal.Category
                                    </span>
                                </td>
                                <td style="color: var(--accent-orange); font-weight: bold;">Rs. @meal.Price</td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/Admin/EditMeal/@meal.Id" class="btn-action btn-edit">
                                            <i class="fas fa-pen"></i> Edit
                                        </a>
                                        <a href="/Admin/DeleteMeal/@meal.Id" class="btn-action btn-delete" onclick="return confirm('Are you sure you want to delete this item?');">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>