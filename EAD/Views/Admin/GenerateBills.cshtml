@model List<EAD.Models.DailyConsumption>
@{
    ViewData["Title"] = "Generate Monthly Bills";
    // Grouping logic performed here to keep View clean
    var groupedUsers = Model
        .GroupBy(c => c.UserId)
        .Select(g => new
        {
            User = g.First().User,
            Consumptions = g.ToList(),
            TotalAmount = g.Sum(x => x.Quantity * x.MealItem.Price)
        })
        .OrderBy(x => x.User.Name)
        .ToList();
}

    <link href="~/css/GenerateBills.css" rel="stylesheet" />




<div class="container-fluid" style="padding: 2rem;">

   
    <div class="page-header">
        <div class="page-title">
            <h2>Generate Monthly Bills</h2>
            <p>Review consumptions and finalize bills for staff and students.</p>
        </div>
        <!-- Right Side: Button -->
        <a href="/Admin/Bills" class="btn-home">
            <i class="fas fa-arrow-left me-2"></i> Back
        </a>
    </div>

    @if (!groupedUsers.Any())
    {
        <div class="empty-state">
            <i class="fas fa-check-circle" style="font-size: 3rem; color: var(--accent-green); margin-bottom: 1rem;"></i>
            <h3>All Caught Up!</h3>
            <p>There are no unbilled consumptions at this time.</p>
        </div>
    }
    else
    {
        <!-- Action Bar -->
        <div class="action-bar">
            <div>
                <span class="fw-bold text-white">Pending Requests:</span>
                <span class="text-muted ms-2">@groupedUsers.Count Users</span>
            </div>
            <div style="display:flex; align-items:center; gap:15px;">
                <span id="progressText" class="status-text"></span>
                <button type="button" id="btnOpenModal" class="btn-custom btn-orange">
                    <i class="fas fa-bolt me-2"></i> Generate All Bills
                </button>
            </div>
        </div>

        <!-- User Cards Loop -->
        <div id="usersContainer">
            @foreach (var group in groupedUsers)
            {
                <div class="bill-card" id="card-@group.User.Id">
                    <div class="bill-header">
                        <!-- User Info -->
                        <div class="user-info">
                            <div class="user-avatar">
                                @group.User.Name.Substring(0, 1).ToUpper()
                            </div>
                            <div>
                                <h5 style="margin:0; font-weight:600;">@group.User.Name</h5>
                                <span class="badge-custom @(group.User.UserType == 2 ? "badge-food" : "badge-drink")">
                                    @(group.User.UserType == 2 ? "Food + Drinks" : "Drinks Only")
                                </span>
                                <div style="font-size:0.8rem; color:#666; margin-top:4px;">ID: #@group.User.Id</div>
                            </div>
                        </div>

                        <!-- Total -->
                        <div class="text-end">
                            <div style="font-size:0.8rem; color:var(--text-muted);">Total Payable</div>
                            <div class="bill-total">Rs. @group.TotalAmount</div>
                        </div>

                        <!-- Actions -->
                        <div style="display:flex; gap:10px;">
                            <button class="btn-custom btn-outline" onclick="toggleDetails('@group.User.Id')">
                                <i class="fas fa-list me-1"></i> Details
                            </button>
                            <button class="btn-custom btn-orange btn-generate-single"
                                    data-userid="@group.User.Id"
                                    data-total="@group.TotalAmount">
                                Generate Bill
                            </button>
                        </div>
                    </div>

                    <!-- Hidden Details Table -->
                    <div class="details-container" id="details-@group.User.Id">
                        <table class="details-table">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Item</th>
                                    <th>Category</th>
                                    <th>Price</th>
                                    <th>Qty</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in group.Consumptions)
                                {
                                    <tr>
                                        <td>@item.ConsumptionDate.ToString("MMM dd")</td>
                                        <td>@item.MealItem.Name</td>
                                        <td>@item.MealItem.Category</td>
                                        <td>Rs. @item.MealItem.Price</td>
                                        <td>@item.Quantity</td>
                                        <td class="text-white">Rs. @(item.Quantity* item.MealItem.Price)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Custom Confirmation Modal -->
<div class="modal-backdrop" id="confirmModal">
    <div class="custom-modal">
        <div class="modal-title">Confirm Action</div>
        <p class="modal-text">Are you sure you want to generate bills for ALL pending users? This cannot be undone.</p>
        <div class="modal-actions">
            <button class="btn-custom btn-outline" id="btnCancelModal">Cancel</button>
            <button class="btn-custom btn-orange" id="btnConfirmGenerate">Yes, Generate All</button>
        </div>
    </div>
</div>

<!-- Toast Container -->
<div class="toast-container" id="toastContainer"></div>

    <script src="~/js/GenerateBills.js"></script>




