@model EAD.Models.User
@{
    ViewData["Title"] = Model.Id == 0 ? "Add New User" : "Edit User";
}

<link rel="stylesheet" href="~/css/AdminHome.css">

<br />
<a href="/" class="btn-add">
    </i>Home
</a>

<div class="page-container fade-in">
    <div class="page-header">
        <div class="page-title">
            <h2>@(Model.Id == 0 ? "Add New User" : "Edit User")</h2>
            <p>@(Model.Id == 0 ? "Create a new account" : "Update user details")</p>
        </div>
    </div>

    <div class="data-card">
        <div class="form-container">
            <form asp-action="AddUser" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <!-- Name -->
                <div class="form-group">
                    <label asp-for="Name" class="form-label">Full Name <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" placeholder="Ex: John Doe" required minlength="2" maxlength="100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email Address <span class="text-danger">*</span></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Ex: john@example.com" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password - Only show when adding new user -->
                @if (Model.Id == 0)
                {
                    <div class="form-group">
                        <label asp-for="Password" class="form-label">Password <span class="text-danger">*</span></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Minimum 6 characters" required minlength="6" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="form-label">New Password</label>
                        <input type="password" name="NewPassword" class="form-control" placeholder="Leave blank to keep current" minlength="6" />
                        <small style="color: var(--text-muted); font-size: 0.85rem;">Only fill if you want to change password</small>
                    </div>
                }

                <!-- User Type -->
                <div class="form-group">
                    <label asp-for="UserType" class="form-label">User Type <span class="text-danger">*</span></label>
                    <select asp-for="UserType" class="form-control" required>
                        <option value="" disabled>Select user type</option>
                        <option value="1">Tea & Water Only</option>
                        <option value="2">Food + Tea & Water</option>
                    </select>
                    <span asp-validation-for="UserType" class="text-danger"></span>
                </div>

                <!-- Is Active -->
                <div class="form-group">
                    <label class="form-check">
                        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                        <span class="form-check-label">Is Active Account</span>
                    </label>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-submit">Save User</button>
                    <a asp-action="ManageUsers" class="btn-cancel">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

