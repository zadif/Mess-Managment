@model StatisticsViewModel
@{
    ViewData["Title"] = "Statistics";
    // Adjust layout path if necessary
    // Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- External Libraries (If not already in Layout) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<link href="~/css/statistics.css" rel="stylesheet" />

<div class="container-fluid mt-4">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">Statistics Dashboard</h2>
            <p class="text-muted">Financials, User Activity & Mess Reports</p>
            
        </div>
        <div>
            <!-- Date Display -->
            <span class="badge bg-dark p-2 border border-secondary">
                <i class="far fa-calendar-alt me-2"></i> @DateTime.Now.ToString("dd MMM, yyyy")
            </span>
            <a href="/" class="btn-home">
                <i class="fas fa-home me-2"></i> Home
            </a>
        </div>
    </div>

    <!-- Top Row: Key Metrics Cards -->
    <div class="row">
        <!-- Card 1: Total Revenue -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card d-flex align-items-center">
                <div class="icon-box" style="background: rgba(46, 204, 113, 0.1); color: #2ecc71;">
                    Rs. 
                </div>
                <div>
                    <h3 class="stat-value">@Model.total.ToString("N0")</h3>
                    <span class="stat-label">Total Revenue</span>
                </div>
            </div>
        </div>

        <!-- Card 2: Total Users -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card d-flex align-items-center">
                <div class="icon-box">
                    <i class="fas fa-users"></i>
                </div>
                <div>
                    <h3 class="stat-value">@Model.numUsers</h3>
                    <span class="stat-label">Total Users</span>
                </div>
            </div>
        </div>

        <!-- Card 3: Total Bills Generated -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card d-flex align-items-center">
                <div class="icon-box" style="background: rgba(52, 152, 219, 0.1); color: #3498db;">
                    <i class="fas fa-file-invoice-dollar"></i>
                </div>
                <div>
                    <h3 class="stat-value">@Model.numBills</h3>
                    <span class="stat-label">Bills Generated</span>
                </div>
            </div>
        </div>

        <!-- Card 4: Menu Items -->
        <div class="col-xl-3 col-md-6">
            <div class="stat-card d-flex align-items-center">
                <div class="icon-box" style="background: rgba(155, 89, 182, 0.1); color: #9b59b6;">
                    <i class="fas fa-utensils"></i>
                </div>
                <div>
                    <h3 class="stat-value">@Model.numMenuItems</h3>
                    <span class="stat-label">Menu Items</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Middle Row: Charts -->
    <div class="row">

        <!-- Chart 1: Paid vs Unpaid Bills -->
        <div class="col-lg-6">
            <div class="stat-card">
                <h4 class="card-title">Bill Payment Status</h4>
                <div class="chart-container">
                    <canvas id="billsChart"></canvas>
                </div>
                <div class="mt-3 text-center">
                    <span class="me-3"><i class="fas fa-circle text-success small"></i> Paid: @Model.numPaidBills</span>
                    <span><i class="fas fa-circle text-danger small"></i> Unpaid: @(Model.numBills - Model.numPaidBills)</span>
                </div>
            </div>
        </div>

        <!-- Chart 2: Active vs Inactive Users -->
        <div class="col-lg-6">
            <div class="stat-card">
                <h4 class="card-title">User Activity</h4>
                <div class="chart-container">
                    <canvas id="usersChart"></canvas>
                </div>
                <div class="mt-3 text-center">
                    <span class="me-3"><i class="fas fa-circle text-primary small"></i> Active: @(Model.numUsers - Model.numInactiveUsers)</span>
                    <span><i class="fas fa-circle text-secondary small"></i> Inactive: @Model.numInactiveUsers</span>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <!-- 2. THE DATA BRIDGE (Keep this in CSHTML) -->
    <script>
        // We create a global object to hold the server data
        const dashboardData = {
            totalBills: @Model.numBills,
            paidBills: @Model.numPaidBills,
            totalUsers: @Model.numUsers,
            inactiveUsers: @Model.numInactiveUsers,
            // Use Html.Raw to safely encode the string for JS
            serverError: '@Html.Raw(ViewBag.Error)'
        };
    </script>

    <!-- 3. Link your external JS file (It runs AFTER the bridge is built) -->
    <script src="~/js/statistics.js"></script>
}
