@{
    ViewData["Title"] = "Generate Consumption";
}
<link rel="stylesheet" href="~/css/generateDailyConsumptions.css">

<div class="mess-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="page-title">Generate Today's Consumption</h2>
            <p class="text-muted small">Manage daily meal entries for students and staff.</p>
        </div>
        <a href="/" class="btn btn-theme-orange">
            <i class="fa fa-home me-2"></i>Home
        </a>
    </div>

    <!-- Date Picker + Load Button -->
    <div class="mb-4 p-4 bg-theme-dark rounded shadow-sm border border-theme-border">
        <div class="d-flex flex-wrap align-items-center gap-3">
            <div class="d-flex align-items-center gap-3">
                <label for="consumptionDate" class="text-white fw-medium mb-0" style="white-space: nowrap;">
                    Select Date:
                </label>
                <input type="date"
                       id="consumptionDate"
                       class="form-control"
                       style="max-width: 200px;"
                       max="@DateTime.Today.ToString("yyyy-MM-dd")"
                       value="@DateTime.Today.ToString("yyyy-MM-dd")"
                       required />
            </div>

            <button class="btn btn-theme-orange" id="loadDateBtn" onclick="loadData()">
                Load Consumptions
            </button>
        </div>

        <small class="text-muted mt-3 d-block">
            Current data shown is for: <strong id="displayDate">@DateTime.Today.ToString("dddd, MMMM dd, yyyy")</strong>
        </small>
    </div>

    <!-- Dynamic Alert Area -->
    <div id="alertContainer"></div>

    <!-- Loading Spinner -->
    <div id="loadingSpinner" class="text-center py-5" style="display: none;">
        <div class="spinner-border text-theme-orange" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="text-muted mt-2">Loading data...</p>
    </div>

    <!-- Content Container -->
    <div id="contentContainer" style="display: none;">
        <div class="action-toolbar mb-4 p-3 rounded d-flex justify-content-between align-items-center flex-wrap gap-3">
            <button type="button" id="toggleBtn" class="btn btn-theme-outline" onclick="toggleCheckboxes()">
                <i class="fa fa-check-square me-2"></i>Mark / Unmark All
            </button>
            <div class="d-flex gap-2">
                <button type="button" id="deleteAllBtn" class="btn btn-theme-danger-soft" onclick="deleteTodayConsumption()">
                    <i class="fa fa-trash me-2"></i>Delete All
                </button>
                <button type="button" id="saveBtn" class="btn btn-theme-success" onclick="saveAllConsumptions()">
                    <i class="fa fa-save me-2"></i>Save Consumption (<span id="selectedCount">0</span>)
                </button>
            </div>
        </div>

        <div class="table-responsive">
            <form id="saveForm">
                <table class="table theme-table align-middle" id="consumptionTable">
                    <thead>
                        <tr id="tableHeaderRow">
                            <!-- Headers will be injected by JS -->
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <!-- Rows will be injected by JS -->
                    </tbody>
                </table>
            </form>
        </div>
    </div>

    <div id="noDataMessage" class="alert alert-theme-warning" style="display: none;">
        <i class="fa fa-exclamation-triangle me-2"></i> No menu items found for this date.
    </div>
</div>

<!-- Edit Modal -->
<div id="editModal" class="theme-modal-backdrop" style="display:none;">
    <div class="theme-modal-content">
        <div class="theme-modal-header">
            <h5>Edit Consumption</h5>
            <span class="close-btn" onclick="closeModal()">&times;</span>
        </div>
        <div class="theme-modal-body">
            <div class="d-flex align-items-center mb-2">
                <span class="text-muted me-2">Editing for:</span>
                <h3 id="modalUserName" class="m-0 text-white fw-bold"></h3>
            </div>
            <hr style="border-color: #2b2b40; margin-bottom: 20px;">
            <div id="modalBody"></div>
        </div>
        <div class="theme-modal-footer">
            <button type="button" class="btn-modal-cancel" onclick="closeModal()">Cancel</button>
            <button type="button" id="modalSaveBtn" class="btn-modal-save" onclick="saveEdit()">Save Changes</button>
        </div>
    </div>
</div>

<script src="~/js/generateDailyConsumptions.js"></script>
<script>
    // Load data on page load
    document.addEventListener('DOMContentLoaded', function() {
        loadData();
    });
</script>