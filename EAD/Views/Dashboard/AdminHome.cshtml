<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Ksk Mess</title>

    <!-- Google Fonts - Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Link to CSS -->
    <link rel="stylesheet" href="~/css/AdminHome.css">
</head>
<body>

    <div class="admin-layout">
        <!-- Sidebar Navigation -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <div class="logo-icon">
                        <i class="fas fa-bowl-food"></i>
                    </div>
                    <span class="logo-text">Ksk Mess</span>
                </div>
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-section">
                    <span class="nav-section-title">Main Menu</span>
                    <a href="/Dashboard/AdminHome" class="nav-link active">
                        <i class="fas fa-th-large"></i>
                        <span>Dashboard</span>
                    </a>
                    <a href="/Admin/ManageUsers" class="nav-link">
                        <i class="fas fa-users"></i>
                        <span>Manage Users</span>
                    </a>
                    <a href="/Admin/ManageMeals" class="nav-link">
                        <i class="fas fa-utensils"></i>
                        <span>Meal Items</span>
                    </a>
                    <a href="/Admin/DailyMeals" class="nav-link">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Daily Menu</span>
                    </a>
                </div>

                <div class="nav-section">
                    <span class="nav-section-title">Operations</span>
                    <a href="/Admin/generateDailyConsumptions" class="nav-link">
                        <i class="fas fa-clipboard-list"></i>
                        <span>Daily Consumptions</span>
                    </a>
                    <a href="/Admin/Bills" class="nav-link">
                        <i class="fas fa-file-invoice-dollar"></i>
                        <span>Billing</span>
                    </a>
                </div>
            </nav>

            <div class="sidebar-footer">
                <form action="/Login/Logout" method="post">
                    <button type="submit" class="logout-btn">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Sign Out</span>
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Top Header Bar -->
            <header class="top-header">
                <div class="header-left">
                    <h1 class="page-title">Dashboard</h1>
                    <p class="page-subtitle">Welcome back, Administrator</p>
                </div>
                <div class="header-right">
                    <div class="date-badge">
                        <i class="far fa-calendar"></i>
                        <span id="currentDate"></span>
                    </div>

                    <!-- Download Report Button (Admin) -->
                    <a href="/Reports/AdminSummaryReport" class="header-report-btn" title="Download Admin Report">
                        <i class="fas fa-file-pdf"></i>
                        <span>Download Report</span>
                    </a>

                    <div class="admin-avatar">
                        <i class="fas fa-user-shield"></i>
                    </div>
                </div>
            </header>

            <!-- Dashboard Content -->
            <div class="dashboard-content">
                <!-- Quick Actions Grid -->
                <div class="section-header">
                    <h2>Quick Actions</h2>
                    <p>Manage your mess operations</p>
                </div>

                <div class="actions-grid">
                    <a href="/Admin/ManageUsers" class="action-tile">
                        <div class="tile-icon">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div class="tile-content">
                            <h3>User Management</h3>
                            <p>Add, edit or remove users from the system</p>
                        </div>
                        <div class="tile-arrow">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </a>

                    <a href="/Admin/ManageMeals" class="action-tile">
                        <div class="tile-icon">
                            <i class="fas fa-hamburger"></i>
                        </div>
                        <div class="tile-content">
                            <h3>Meal Items</h3>
                            <p>Configure available food and beverages</p>
                        </div>
                        <div class="tile-arrow">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </a>

                    <a href="/Admin/DailyMeals" class="action-tile">
                        <div class="tile-icon">
                            <i class="fas fa-calendar-week"></i>
                        </div>
                        <div class="tile-content">
                            <h3>Daily Menu</h3>
                            <p>Set up the weekly meal schedule</p>
                        </div>
                        <div class="tile-arrow">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </a>

                    <a href="/Admin/generateDailyConsumptions" class="action-tile">
                        <div class="tile-icon">
                            <i class="fas fa-tasks"></i>
                        </div>
                        <div class="tile-content">
                            <h3>Daily Consumptions</h3>
                            <p>Track and manage daily meal consumption</p>
                        </div>
                        <div class="tile-arrow">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </a>

                    <a href="/Admin/Bills" class="action-tile">
                        <div class="tile-icon">
                            <i class="fas fa-money-bill-wave"></i>
                        </div>
                        <div class="tile-content">
                            <h3>Billing Center</h3>
                            <p>Generate and manage user bills</p>
                        </div>
                        <div class="tile-arrow">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </a>

                    <a href="/Reports/AdminSummaryReport" class="action-tile report-tile">
                        <div class="tile-icon report-icon">
                            <i class="fas fa-file-pdf"></i>
                        </div>
                        <div class="tile-content">
                            <h3>Download Report</h3>
                            <p>Generate PDF summary of all data</p>
                        </div>
                        <div class="tile-arrow">
                            <i class="fas fa-download"></i>
                        </div>
                    </a>
                </div>
            </div>
        </main>
    </div>

    <!-- Link to JS -->
    <script src="~/js/AdminHome.js"></script>
</body>
</html>