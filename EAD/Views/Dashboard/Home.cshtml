
@model List<DailyMenuViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | MessMate</title>

    <!-- Google Fonts - Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Link to CSS -->
    <link rel="stylesheet" href="~/css/UserHome.css">
</head>
<body>

    <div class="user-layout">
        <!-- Sidebar Navigation -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <div class="logo-icon">
                        <i class="fas fa-bowl-food"></i>
                    </div>
                    <span class="logo-text">MessMate</span>
                </div>
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-section">
                    <span class="nav-section-title">Main Menu</span>
                    <a href="/Dashboard/Home" class="nav-link active">
                        <i class="fas fa-th-large"></i>
                        <span>Dashboard</span>
                    </a>
                    <a href="/UserMenu/fullMenu" class="nav-link">
                        <i class="fas fa-calendar-week"></i>
                        <span>Weekly Menu</span>
                    </a>
                    <a href="/UserMenu/Bills" class="nav-link">
                        <i class="fas fa-file-invoice-dollar"></i>
                        <span>My Bills</span>
                    </a>
                </div>

                <div class="nav-section">
                    <span class="nav-section-title">Account</span>
                    <a href="/UserMenu/Profile" class="nav-link">
                        <i class="fas fa-user-circle"></i>
                        <span>Profile</span>
                    </a>
                    <a href="/UserMenu/RecheckConsumptions" class="nav-link">
                        <i class="fas fa-clipboard-check"></i>
                        <span>Consumption History</span>
                    </a>
                </div>
            </nav>

            <div class="sidebar-footer">
                <form action="/Login/Logout" method="post">
                    <button type="submit" class="logout-btn">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Sign Out</span>
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Top Header Bar -->
            <header class="top-header">
                <div class="header-left">
                    <h1 class="page-title">Dashboard</h1>
                    <p class="page-subtitle">Welcome back! Here's your meal overview</p>
                </div>
                <div class="header-right">
                    <div class="date-badge">
                        <i class="far fa-calendar"></i>
                        <span>@DateTime.Now.ToString("ddd, MMM dd")</span>
                    </div>

                    <!-- Download Report Button (User) -->
                    <a href="@Url.Action("UserBillsReport", "Reports")" class="header-report-btn" title="Download My Report">
                        <i class="fas fa-file-pdf"></i>
                        <span>Download Report</span>
                    </a>

                    <div class="user-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                </div>
            </header>

            <!-- Dashboard Content -->
            <div class="dashboard-content">
                <!-- Hero Banner -->
                <div class="hero-banner">
                    <div class="hero-content">
                        <div class="hero-icon">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <div class="hero-text">
                            <h2>Today's Fresh Menu</h2>
                            <p>Delicious meals prepared with care. Check what's cooking!</p>
                        </div>
                    </div>
                    <div class="hero-decoration">
                        <div class="deco-shape shape-1"></div>
                        <div class="deco-shape shape-2"></div>
                        <div class="deco-shape shape-3"></div>
                    </div>
                </div>

                <!-- Today's Menu Section -->
                <div class="section-header">
                    <h2><i class="fas fa-bowl-rice"></i> Today's Menu</h2>
                    <span class="item-count">@if(Model != null) { @Model.Count() } items</span>
                </div>

                <div class="menu-grid">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            string iconClass = (item.Category == "Breakfast") ? "breakfast" : "lunch";
                            <div class="menu-card" 
                                 onclick="openDetails(this)"
                                 data-name="@item.MealItemName"
                                 data-category="@item.Category"
                                 data-type="@item.MealType"
                                 data-price="@item.Price"
                                 data-desc="@(string.IsNullOrEmpty(item.Description) ? "Freshly prepared in our kitchen with healthy ingredients." : item.Description)"
                                 data-icon="@iconClass">
                                
                                <div class="card-icon @iconClass">
                                    @if(item.Category == "Breakfast")
                                    {
                                        <i class="fas fa-mug-hot"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-bowl-food"></i>
                                    }
                                </div>
                                <div class="card-info">
                                    <span class="card-category">@item.Category</span>
                                    <h3 class="card-title">@item.MealItemName</h3>
                                    <span class="card-type">@item.MealType</span>
                                </div>
                                <div class="card-arrow">
                                    <i class="fas fa-chevron-right"></i>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-menu">
                            <i class="fas fa-utensils"></i>
                            <p>Menu not updated yet</p>
                            <span>Check back later for today's delicious options</span>
                        </div>
                    }
                </div>

                <!-- Quick Actions Section -->
                <div class="section-header">
                    <h2><i class="fas fa-bolt"></i> Quick Actions</h2>
                </div>

                <div class="actions-row">
                    <a href="@Url.Action("Bills", "UserMenu")" class="quick-action-card">
                        <div class="action-icon green">
                            <i class="fas fa-receipt"></i>
                        </div>
                        <div class="action-info">
                            <h4>View Bills</h4>
                            <p>Check your monthly expenses</p>
                        </div>
                        <div class="action-arrow">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </a>

                    <a href="@Url.Action("RecheckConsumptions", "UserMenu")" class="quick-action-card">
                        <div class="action-icon blue">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <div class="action-info">
                            <h4>Consumption History</h4>
                            <p>Review your daily meal records</p>
                        </div>
                        <div class="action-arrow">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </a>

                    <a href="@Url.Action("fullMenu", "UserMenu")" class="quick-action-card">
                        <div class="action-icon purple">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div class="action-info">
                            <h4>Weekly Menu</h4>
                            <p>Plan your meals ahead</p>
                        </div>
                        <div class="action-arrow">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </a>

                    <a href="@Url.Action("UserBillsReport", "Reports")" class="quick-action-card report-card">
                        <div class="action-icon report">
                            <i class="fas fa-file-pdf"></i>
                        </div>
                        <div class="action-info">
                            <h4>Download Report</h4>
                            <p>Get PDF of your bills & consumption</p>
                        </div>
                        <div class="action-arrow">
                            <i class="fas fa-download"></i>
                        </div>
                    </a>
                </div>
            </div>
        </main>
    </div>

    <!-- Modal Popup -->
    <div id="foodModal" class="modal-overlay">
        <div class="modal-content">
            <button class="modal-close" onclick="closeDetails()">&times;</button>
            
            <div class="modal-icon" id="m-icon-bg">
                <i class="fas fa-utensils"></i>
            </div>

            <div class="modal-body">
                <span class="modal-category" id="m-category">BREAKFAST</span>
                <h2 id="m-name">Food Name</h2>
                <div class="modal-tags">
                    <span class="tag" id="m-type">Main Course</span>
                </div>
                
                <div class="modal-divider"></div>
                
                <p class="modal-desc" id="m-desc">
                    Description goes here...
                </p>

                <div class="modal-footer">
                    <div class="price-display">
                        <span class="price-label">Price</span>
                        <span class="price-value">Rs. <span id="m-price">0</span></span>
                    </div>
                    <button class="modal-btn" onclick="closeDetails()">Got it</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Sidebar toggle for mobile
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');
        
        if (sidebarToggle && sidebar) {
            sidebarToggle.addEventListener('click', () => {
                sidebar.classList.toggle('active');
                
                let overlay = document.querySelector('.sidebar-overlay');
                if (!overlay) {
                    overlay = document.createElement('div');
                    overlay.className = 'sidebar-overlay';
                    document.body.appendChild(overlay);
                    overlay.addEventListener('click', () => {
                        sidebar.classList.remove('active');
                        overlay.classList.remove('active');
                    });
                }
                overlay.classList.toggle('active');
            });
        }

        // Modal functionality
        const modal = document.getElementById('foodModal');
        const mName = document.getElementById('m-name');
        const mCategory = document.getElementById('m-category');
        const mType = document.getElementById('m-type');
        const mDesc = document.getElementById('m-desc');
        const mPrice = document.getElementById('m-price');
        const mIconBg = document.getElementById('m-icon-bg');

        function openDetails(card) {
            const name = card.getAttribute('data-name');
            const cat = card.getAttribute('data-category');
            const type = card.getAttribute('data-type');
            const price = card.getAttribute('data-price');
            const desc = card.getAttribute('data-desc');
            const iconClass = card.getAttribute('data-icon');

            mName.innerText = name;
            mCategory.innerText = cat;
            mType.innerText = type;
            mDesc.innerText = desc;
            mPrice.innerText = price;

            mIconBg.className = 'modal-icon';
            mIconBg.classList.add(iconClass);

            modal.classList.add('active');
        }

        function closeDetails() {
            modal.classList.remove('active');
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                closeDetails();
            }
        }
    </script>
</body>
</html>