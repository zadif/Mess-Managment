@using System.Linq
@model List<EAD.Models.RecheckDailyConsumptionViewModel>

@{
    ViewData["Title"] = "My Daily Consumptions";
}

<link href="~/css/userRecheckBill.css" rel="stylesheet" />
<!-- Home Button -->

<div class="container py-4">
    <a href="/" class="btn-home-corner">
        <i class="fa fa-house me-2"></i> Home
    </a>
    
    <div class="mess-card">
        <h2 class="page-title">Consumption History</h2>
        <p class="text-muted mb-4">Track your daily meals and expenses</p>

        @if (Model == null || !Model.Any())
        {
            <div class="text-center py-5">
                <i class="fa fa-utensils fa-3x text-muted mb-3" style="opacity: 0.3;"></i>
                <h5 class="text-muted">No records found</h5>
            </div>
        }
        else
        {
            <!-- Grouping Logic Moved Here to ensure scope validity -->
            var groupedData = Model.GroupBy(x => x.ConsumptionDate).OrderByDescending(g => g.Key);

            <div class="table-responsive">
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th width="30%">Meal Item</th>
                            <th width="20%">Type</th>

                            <th width="15%">Price</th>
                            <th width="15%">Status</th>
                            <th width="20%" class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var group in groupedData)
                        {
                            <!-- Date Header Row -->
                            <tr>
                                <td colspan="4" class="date-group-header">
                                    <i class="fa fa-calendar-day me-2"></i>
                                    @group.Key.ToString("dd MMM yyyy, dddd")
                                </td>
                            </tr>

                            <!-- Rows for this date -->
                            @foreach (var c in group)
                            {
                                var isBillPaid = (c.Bill != null && c.Bill.IsPaid);
                                <tr class="bg-white">
                                    <td>
                                        <div class="fw-bold">@c.MealItem.Name</div>
                                    </td>
                                    <td>
                                        <span class="fw-bold">Rs. @c.MealItem.Category</span>
                                    </td>
                                    <td>
                                        <span class="fw-bold">Rs. @c.MealItem.Price</span>
                                    </td>

                                    <td id="status-@c.Id">
                                        @if (isBillPaid)
                                        {
                                            <span class="status-badge status-paid"><i class="fa fa-check-circle"></i> Paid</span>
                                        }
                                        else if (!isBillPaid && c.WasUserPresent)
                                        {
                                            <span class="status-badge status-pending"><i class="fa fa-clock"></i> Pending</span>
                                        }
                                        else if (!isBillPaid && !c.WasUserPresent)
                                        {
                                            <span class="status-badge status-recheck"><i class="fa fa-exclamation-circle"></i> Recheck Sent</span>
                                        }
                                    </td>

                                    <td id="action-@c.Id" class="text-end">
                                        @if (isBillPaid)
                                        {
                                            <small class="text-muted">-</small>
                                        }
                                        else if (!isBillPaid && c.WasUserPresent)
                                        {
                                            <button type="button" class="btn-action-recheck" onclick="openRecheckModal(@c.Id)">
                                                Request Recheck
                                            </button>
                                        }
                                        else if (!isBillPaid && !c.WasUserPresent)
                                        {
                                            <small class="text-muted fst-italic">Pending Review</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">-</small>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Simplified Confirmation Modal -->
<div class="modal fade" id="recheckModalBs" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered ">
        <!-- Added modal-sm for a smaller popup look -->
        <div class="modal-content border-0 shadow-lg" style="border-radius: 20px;">
            <!-- Header with Cross Button -->
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold text-dark ps-2">Confirm Action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body with "Are you sure" text -->
            <div class="modal-body p-4 text-center">
                <i class="fa fa-circle-question text-warning fa-3x mb-3"></i>
                <p class="fs-6 fw-bold text-secondary mb-4">
                    Are you sure you want to recheck this request?
                </p>

                <div class="d-flex justify-content-center gap-2">
                    <button type="button" class="btn btn-light w-50" data-bs-dismiss="modal" style="border-radius: 12px;">Cancel</button>
                    <button type="button" onclick="confirmRecheck()" class="btn w-50 fw-bold text-white" style="background-color: var(--messmate-primary); border-radius: 12px;">
                        Yes, Recheck
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

