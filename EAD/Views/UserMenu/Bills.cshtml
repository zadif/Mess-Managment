@model BillViewModel
@{
    ViewData["Title"] = "My Bills";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
    <link href="~/css/userBills.css" rel="stylesheet" />
</head>
<body>
    <div class="page-container">
        <div class="page-header text-center mb-5">
            <h1 class="display-6">Monthly Bills</h1>
            <p>Manage your mess expenses easily</p>
            <a href="/" class="btn-home-corner">
                <i class="bi bi-house-door-fill"></i> Home
            </a>
        </div>

        @if (Model?.Bil == null || !Model.Bil.Any())
        {
            <div class="empty-state">
                <i class="bi bi-receipt" style="font-size: 4rem; opacity: 0.5;"></i>
                <h3 class="mt-3">No Bills Found</h3>
                <p>Relax! You have no pending bills at the moment.</p>
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @{
                    var recheckArrId = 0;
                }
                @foreach (var bill in Model.Bil)
                {
                    var isPaid = bill.IsPaid;
                    var isVerified = bill.VerifiedByAdmin;
                    var isSentforRecheck = Model.BillInRecheck[recheckArrId];

                    string badgeClass = "status-unpaid";
                    string badgeText = "Unpaid";
                    if (isVerified) { badgeClass = "status-paid"; badgeText = "Verified"; }
                    else if (isPaid) { badgeClass = "status-pending"; badgeText = "Pending"; }
                    else if (isSentforRecheck) { badgeClass = "status-pending"; badgeText = "In Recheck"; }

                    <div class="col">
                        <div class="bill-card" id="card-@bill.Id">
                            <div>
                                <span class="status-badge @badgeClass" id="badge-@bill.Id">@badgeText</span>
                                <span class="bill-id">Bill #@bill.Id</span>
                                <div class="bill-amount-label">Total Amount</div>
                                <div class="bill-amount-value">Rs. @bill.TotalAmount</div>
                            </div>

                            <div class="mb-3">
                                <div class="bill-info-row">
                                    <i class="bi bi-calendar-event"></i>
                                    <span>Generated: <strong>@bill.GeneratedOn</strong></span>
                                </div>
                                @if (bill.PaidOn.HasValue)
                                {
                                    <div class="bill-info-row text-success">
                                        <i class="bi bi-check-circle-fill"></i>
                                        <span>Paid: @bill.PaidOn.Value.ToString("MMM dd, yyyy")</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="bill-info-row text-danger">
                                        <i class="bi bi-clock-history"></i>
                                        <span>Due: Within 5 days</span>
                                    </div>
                                }
                            </div>

                            <div class="action-area" id="actions-@bill.Id">
                                @if (!isPaid && !isSentforRecheck)
                                {
                                    <button class="btn-pay" onclick="confirmPayment(@bill.Id)">
                                        Pay Now
                                    </button>
                                    <button class="btn-recheck" onclick="openRecheckPopup(@bill.Id)">
                                        Recheck
                                    </button>
                                }
                                else if (isPaid && !isVerified)
                                {
                                    <div class="w-100 text-center text-muted fw-bold p-2 bg-light rounded">
                                        <i class="bi bi-hourglass-split"></i> Awaiting Verification
                                    </div>
                                }
                                else if (isVerified)
                                {
                                    <div class="w-100 text-center text-success fw-bold p-2 bg-light rounded">
                                        <i class="bi bi-check-all"></i> Payment Verified
                                    </div>
                                }
                                else if (isSentforRecheck)
                                {
                                    <div class="w-100 text-center text-warning fw-bold p-2 bg-light rounded">
                                        <i class="bi bi-envelope-paper"></i> Recheck Sent
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    recheckArrId++;
                }
            </div>
        }
    </div>

    <!-- CONSUMPTIONS POPUP MODAL -->
    <div id="consumptionModal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.7); z-index:9999; justify-content:center; align-items:center;">
        <div style="background:white; padding:30px; border-radius:15px; width:90%; max-width:800px; max-height:90%; overflow-y:auto;">
            <div style="display:flex; justify-content:space-between; margin-bottom:20px;">
                <h4>Bill Consumptions</h4>
                <span onclick="closeConsumptionModal()" style="font-size:30px; cursor:pointer;">×</span>
            </div>
            <div id="consumptionTable">
                <!-- Filled by JS -->
            </div>
            <div style="margin-top:20px; text-align:right;">
                <button onclick="closeConsumptionModal()" class="btn btn-secondary">Close</button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/userBills.js"></script>
</body>
</html>