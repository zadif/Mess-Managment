@model List<EAD.Models.BillRecheckRequest>
@{
    ViewData["Title"] = "My Recheck Requests";
}

<!-- External Dependencies -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link href="~/css/userRecheckBill.css" rel="stylesheet" />

<!-- FIXED HOME BUTTON (Pinned to Screen Corner) -->
<a href="/" class="btn-home-corner shadow-sm">
    <i class="fas fa-home"></i> Home
</a>

<div class="container-fluid py-4 fade-in content-wrapper">

    <!-- Page Header -->
    <div class="mb-4 mt-2">
        <h2 class="fw-bold text-dark mb-1">Recheck Requests</h2>
        <p class="text-secondary mb-0" style="font-size: 0.95rem;">Track the status of your bill clarifications</p>
    </div>

    <!-- Main Content Card -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden main-card">
        <div class="card-body p-0">

            @if (!Model.Any())
            {
                <div class="text-center py-5 empty-state">
                    <div class="mb-3 icon-circle">
                        <i class="fas fa-file-invoice-dollar fa-3x text-theme-light"></i>
                    </div>
                    <h4 class="fw-bold text-dark">No Requests Found</h4>
                    <p class="text-muted mb-4">You haven't submitted any bill recheck requests yet.</p>
                    <a asp-action="Bills" class="btn btn-theme px-4 py-2 rounded-pill shadow-theme">
                        Check My Bills
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead>
                            <tr class="bg-light-header">
                                <th class="ps-4 py-3 text-uppercase text-xs font-weight-bolder text-secondary">Request Info</th>
                                <th class="py-3 text-uppercase text-xs font-weight-bolder text-secondary">Bill Amount</th>
                                <th class="py-3 text-uppercase text-xs font-weight-bolder text-secondary">Message</th>
                                <th class="py-3 text-center text-uppercase text-xs font-weight-bolder text-secondary">Status</th>
                                <th class="pe-4 py-3 text-end text-uppercase text-xs font-weight-bolder text-secondary">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var req in Model.OrderByDescending(r => r.RequestedOn))
                            {
                                <tr class="border-bottom hover-row">
                                    <td class="ps-4 py-3">
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-dark">#REQ-@req.Id</span>
                                            <span class="text-muted small">Bill ID: #@req.Bill.Id</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-theme">Rs. @req.Bill.TotalAmount</span>
                                            <span class="text-muted small">@req.Bill.GeneratedOn.ToString("MMM yyyy")</span>
                                        </div>
                                    </td>
                                    <td>
                                        <!-- Custom SweetAlert Trigger -->
                                        <button onclick="viewMessage('@req.Id', '@(req.RequestMessage)')"
                                                class="btn btn-sm btn-light-theme text-theme rounded-pill px-3 fw-bold">
                                            <i class="fas fa-comment-dots me-1"></i> View
                                        </button>
                                    </td>
                                    <td class="text-center">
                                        @if (req.Status == "Pending")
                                        {
                                            <span class="badge badge-soft-warning">
                                                <i class="fas fa-hourglass-half me-1"></i> Pending
                                            </span>
                                        }
                                        else if (req.Status == "Approved")
                                        {
                                            <span class="badge badge-soft-success">
                                                <i class="fas fa-check-circle me-1"></i> Approved
                                            </span>
                                        }
                                        else if (req.Status == "Rejected")
                                        {
                                            <span class="badge badge-soft-danger">
                                                <i class="fas fa-check-circle me-1"></i>Rejected
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-soft-secondary">@req.Status</span>
                                        }
                                    </td>
                                    <td class="pe-4 text-end">
                                        <span class="text-secondary fw-bold text-xs">@req.RequestedOn.ToString("dd MMM")</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

                                        <script src="~/js/userRecheckBill.js"></script>