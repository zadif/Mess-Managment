@model UserProfileViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure this matches your layout path
}

<!-- External Library for Popups -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    /* MessMate Theme Consistency */
    :root {
        --primary-color: #5a67d8; /* Indigo */
        --primary-hover: #4c51bf;
        --bg-color: #eef2ff;
        --card-bg: #ffffff;
        --text-dark: #2d3748;
        --danger-color: #fc8181; /* Soft Red/Pink */
        --danger-hover: #f56565;
    }

    body {
        background-color: var(--bg-color);
        font-family: 'Segoe UI', sans-serif;
    }

    .profile-header {
        margin-bottom: 2rem;
    }

        .profile-header h2 {
            color: var(--primary-color);
            font-weight: 700;
        }

    .profile-card {
        background: var(--card-bg);
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        border: none;
        padding: 2rem;
        margin-bottom: 1.5rem;
        transition: transform 0.2s;
    }

    .form-label {
        font-weight: 600;
        color: #718096;
        font-size: 0.9rem;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #e2e8f0;
        padding: 0.75rem;
        background-color: #f7fafc;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(90, 103, 216, 0.2);
        }

    .btn-messmate {
        background-color: var(--primary-color);
        color: white;
        border-radius: 10px;
        padding: 10px 25px;
        font-weight: 600;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-messmate:hover {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
        }

    .btn-danger-custom {
        background-color: #ffeaea;
        color: #c53030;
        border: 1px solid #fc8181;
        border-radius: 10px;
        padding: 10px 25px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-danger-custom:hover {
            background-color: #c53030;
            color: white;
        }

    .section-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .user-avatar-placeholder {
        width: 80px;
        height: 80px;
        background-color: #ebf4ff;
        color: var(--primary-color);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: 1rem;
    }
</style>

<div class="container py-4">
    <div class="profile-header">
        <h2><i class="fas fa-user-circle me-2"></i> User Profile</h2>
        <p class="text-muted">Manage your personal information and security settings.</p>
    </div>

    <div class="row">
        <!-- LEFT COLUMN: Edit Details -->
        <div class="col-lg-7">
            <div class="profile-card">
                <div class="section-title">
                    <i class="fas fa-edit text-primary"></i> Personal Details
                </div>

                <form asp-action="UpdateInfo" method="post">

                    <div class="row mb-3">
                        <div class="col-md-2 d-flex justify-content-center align-items-start">
                            <div class="user-avatar-placeholder">
                                <i class="fas fa-user"></i>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Full Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email Address</label>
                                <input asp-for="Email" class="form-control" readonly style="background-color: #edf2f7; cursor: not-allowed;" />
                                <small class="text-muted">Email cannot be changed.</small>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="UserType" class="form-label">User Role</label>
                        <select asp-for="UserType" class="form-control form-select">
                            <option value="1">Tea & Water Only</option>
                            <option value="2">Food + Tea & Water</option>
                        </select>
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-messmate">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>

        <!-- RIGHT COLUMN: Security & Danger Zone -->
        <div class="col-lg-5">
            <!-- Change Password Card -->
            <div class="profile-card">
                <div class="section-title">
                    <i class="fas fa-lock text-primary"></i> Security
                </div>
                <form asp-action="ChangePassword" method="post">

                    <div class="mb-3">
                        <label asp-for="CurrentPassword" class="form-label">Current Password</label>
                        <input asp-for="CurrentPassword" class="form-control" placeholder="••••••" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label">New Password</label>
                        <input asp-for="NewPassword" class="form-control" placeholder="••••••" required />
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-messmate btn-sm">Update Password</button>
                    </div>
                </form>
            </div>

            <!-- Deactivation Card -->
            <div class="profile-card" style="border: 1px dashed #fc8181;">
                <div class="section-title text-danger">
                    <i class="fas fa-exclamation-triangle"></i> Danger Zone
                </div>
                <p class="small text-muted mb-3">
                    Deactivating your account will log you out immediately. You will need to contact an admin to reactivate it.
                </p>
                <!-- We use a regular button with an onclick event for the popup -->
                <button type="button" class="btn btn-danger-custom w-100" onclick="confirmDeactivation()">
                    <i class="fas fa-power-off me-2"></i> Deactivate Account
                </button>

                <!-- Hidden form to actually submit the request -->
                <form id="deactivateForm" asp-action="DeactivateAccount" method="post" style="display:none;">
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Scripts for Custom Popups -->
<script>
    // 1. Check for Server-Side Messages (Success/Error from TempData)
    document.addEventListener("DOMContentLoaded", function() {
        var successMsg = '@TempData["Success"]';
        var errorMsg = '@TempData["Error"]';

        if (successMsg) {
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: successMsg,
                confirmButtonColor: '#5a67d8'
            });
        }

        if (errorMsg) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: errorMsg,
                confirmButtonColor: '#5a67d8'
            });
        }
    });

    // 2. Custom Popup for Deactivation
    function confirmDeactivation() {
        Swal.fire({
            title: 'Are you sure?',
            text: "You will be logged out immediately!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#fc8181', // Red/Pink
            cancelButtonColor: '#5a67d8', // Indigo
            confirmButtonText: 'Yes, deactivate it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                // Submit the hidden form
                document.getElementById('deactivateForm').submit();
            }
        })
    }
</script>