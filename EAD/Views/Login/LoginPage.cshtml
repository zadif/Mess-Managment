<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MessMate | Sign In</title>

    <!-- Google Fonts - Inter for modern look -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Link to your CSS file -->
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <!-- Animated Background Shapes -->
    <div class="bg-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
    </div>

    <div class="login-wrapper">
        <!-- Left Side - Branding -->
        <div class="brand-panel">
            <div class="brand-content">
                <div class="logo-icon">
                    <i class="fas fa-bowl-food"></i>
                </div>
                <h1 class="brand-title">MessMate</h1>
                <p class="brand-tagline">Smart Mess Management System</p>
                
                <div class="features-list">
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Track daily meals & expenses</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Automated billing system</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Real-time menu updates</span>
                    </div>
                </div>
            </div>
            <div class="brand-footer">
                <p>&copy; 2026 MessMate. All rights reserved.</p>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="form-panel">
            <div class="form-container">
                <!-- Role Selector Tabs -->
                <div class="role-tabs">
                    <button type="button" class="role-tab active" data-role="User" id="tab-user">
                        <i class="fas fa-user"></i>
                        <span>User</span>
                    </button>
                    <button type="button" class="role-tab" data-role="Admin" id="tab-admin">
                        <i class="fas fa-user-shield"></i>
                        <span>Admin</span>
                    </button>
                    <div class="tab-indicator"></div>
                </div>

                <div class="form-header">
                    <h2>Welcome Back</h2>
                    <p id="role-subtitle">Sign in to your account</p>
                </div>

                <!-- Error Display -->
                @if (ViewBag.Error != null)
                {
                    <div class="error-banner">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>@ViewBag.Error</span>
                    </div>
                }

                <form action="/Login/LoginPage" class="auth-form" method="post" onsubmit="return validateForm()">
                    <!-- Email Input -->
                    <div class="form-field">
                        <label for="username">Email Address</label>
                        <div class="input-wrapper">
                            <i class="fas fa-envelope"></i>
                            <input type="email" id="username" required placeholder="Enter your email" name="email" autocomplete="email">
                        </div>
                    </div>

                    <!-- Password Input -->
                    <div class="form-field">
                        <label for="password">Password</label>
                        <div class="input-wrapper">
                            <i class="fas fa-lock"></i>
                            <input type="password" id="password" required placeholder="Enter your password" name="password">
                            <button type="button" class="toggle-password" onclick="togglePasswordVisibility()">
                                <i class="fas fa-eye" id="eye-icon"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Hidden Role -->
                    <input type="hidden" name="role" id="hiddenRoleInput" value="User" />
                    
                    <!-- Submit Button -->
                    <button type="submit" class="btn-submit">
                        <span>Sign In</span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </form>

                <div class="form-footer">
                    <p>Need help? Contact your mess administrator</p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/login.js"></script>
</body>
</html>